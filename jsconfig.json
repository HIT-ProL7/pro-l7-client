{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@components/*": ["./src/components/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@layout/*": ["./src/layouts/*"],
      "@styles/*": ["./src/styles/*"],
      "@stores/*": ["./src/stores/*"],
      "@router/*": ["./src/router/*"],
      "@assets/*": ["./src/assets/*"],
      "@api/*": ["./src/api/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.vue", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
